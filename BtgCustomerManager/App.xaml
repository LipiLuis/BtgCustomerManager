<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BtgCustomerManager"
             x:Class="BtgCustomerManager.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="ValidationErrorStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#FFFFE0E0"/>
                <Setter Property="TextColor" Value="Red"/>
            </Style>
            
            <Color x:Key="Primary">#512BD4</Color>
            <Color x:Key="Gray500">#9E9E9E</Color>
        
            <TapGestureRecognizer x:Key="TapToClose" 
                                  Command="{Binding CancelCommand}"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
